<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Listings - Job Bridge</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background-color: #007bff;
      color: white;
    }
    nav ul {
      list-style: none;
      display: flex;
      margin: 0;
      padding: 0;
    }
    nav ul li {
      margin-left: 20px;
    }
    nav ul li a {
      color: white;
      text-decoration: none;
    }
    .card img {
      object-fit: cover;
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }
    .card-body p {
      margin-bottom: 0.5rem;
    }
    @media (max-width: 576px) {
      .card-body h5 {
        font-size: 1rem;
      }
      .card-body p {
        font-size: 0.85rem;
      }
      .btn-sm {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav>
      <div>
          <h1 style="margin: 0;">Job Bridge</h1>
      </div>
      <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/courses">Courses</a></li>
      </ul>
  </nav>

  <div class="container my-4">
    <h2 class="text-center mb-4">Available Job Listings</h2>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (!jobs || jobs.length === 0) { %>
      <p class="text-center text-muted">No job listings available.</p>
    <% } else { %>
      <div class="row g-4">
        <% jobs.forEach(job => { %>
          <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm h-100">

              <% if (job.companyImage) { %>
                <img src="/uploads/<%= job.companyImage %>" class="card-img-top" alt="Company Image" height="200">
              <% } else { %>
                <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image" height="200">
              <% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= job.jobName %></h5>
                <p class="card-text">
                  <strong>Location:</strong> <%= job.jobLocation %><br>
                  <strong>Skills:</strong> <%= job.jobSkills %><br>
                  <strong>Package:</strong> <%= job.packagePerYear %> LPA<br>
                  <strong>Contact:</strong> <%= job.contactDetails %>
                </p>
                <p class="text-muted small mb-3"><%= job.jobDescription %></p>

                <div class="mt-auto d-flex justify-content-between flex-wrap gap-2">
                  <% if (user && job.uploader && user._id.toString() === job.uploader._id.toString()) { %>
                    <form action="/delete/<%= job._id %>?_method=DELETE" method="POST">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a href="/job/<%= job._id %>" class="btn btn-warning btn-sm">Edit</a>
                  <% } %>

                  <a href="/jobdetails/<%= job._id %>" class="btn btn-primary btn-sm">View Details</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

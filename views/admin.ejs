<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-img-top {
      object-fit: cover;
    }
    .navbar-nav .nav-link {
      color: white !important;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">Admin Dashboard</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <form action="/logout" method="POST" class="d-inline">
              <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
            </form>
          </li>
          <li class="nav-item ms-2">
            <a class="btn btn-outline-light btn-sm" href="/admin/addcourse">Add Course</a>
          </li>
          <li class="nav-item ms-2">
            <a class="btn btn-outline-light btn-sm" href="/admin/billingdetails">Billing Details</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container my-5">
    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <h1 class="mb-4 text-center">Job Approvals</h1>

    <% if (jobs.length === 0) { %>
      <p class="text-center">No jobs uploaded yet.</p>
    <% } %>

    <div class="row">
      <% for (let job of jobs) { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <% if (job.companyImage) { %>
              <img src="/uploads/<%= job.companyImage %>" class="card-img-top" alt="Company Image" height="200px">
            <% } else { %>
              <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= job.jobName %></h5>
              <p class="card-text"><strong>Location:</strong> <%= job.jobLocation %></p>
              <p class="card-text"><strong>Skills:</strong> <%= job.jobSkills %></p>
              <p class="card-text"><strong>Contact:</strong> <%= job.contactDetails %></p>
              <p class="card-text"><strong>Description:</strong> <%= job.jobDescription %></p>
              <p class="card-text"><strong>Package:</strong> <%= job.packagePerYear %></p>
            </div>
            <div class="card-footer text-center">
              <form method="POST" action="/admin/toggle-approve/<%= job._id %>">
                <% if (job.approved) { %>
                  <button class="btn btn-warning w-100">Disapprove</button>
                <% } else { %>
                  <button class="btn btn-success w-100">Approve</button>
                <% } %>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
